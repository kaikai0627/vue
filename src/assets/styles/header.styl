@import './varibles.styl'
header
    position: relative
    height: $headerHeight
    line-height: $headerHeight
    color: #fff
    background: #1D1D1D
    text-align: center
    font-size: .36rem

    .icon-retreat
        display: inline-block
        height: 100%
        width: 1.4rem
        position: absolute
        left: 0
        top: 0
        font-size: .28rem
        color: #fff

        .icon-back
            position: absolute
            left: .34rem
            top: 50%
            -webkit-transform: translate(0, -50%)
            -moz-transform: translate(0, -50%)
            -ms-transform: translate(0, -50%)
            -o-transform: translate(0, -50%)
            transform: translate(0, -50%)

    .header-rt
        display: inline-block
        height: 100%
        width: 1.6rem
        position: absolute
        top: 0
        font-size: .28rem
        padding-right: .34rem
        text-align: right
        right: 0
        color: #fff